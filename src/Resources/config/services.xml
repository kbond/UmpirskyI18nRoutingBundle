<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="umpirsky_i18n_routing.routing.loader.i18n_route_loader" class="Umpirsky\I18nRoutingBundle\Routing\Loader\I18nRouteLoader">
            <argument type="service" id="umpirsky_i18n_routing.routing.loader.i18n_route_loader.parent" />
            <argument type="service" id="umpirsky_i18n_routing.routing.factory.i18n_route_collection_factory" />
        </service>

        <service id="umpirsky_i18n_routing.routing.factory.i18n_route_collection_factory" class="Umpirsky\I18nRoutingBundle\Routing\Factory\I18nRouteCollectionFactory" public="false">
            <argument type="service" id="umpirsky_i18n_routing.routing.factory.i18n_route_factory" />
            <argument>%umpirsky_i18n_routing.route_name_suffix%</argument>
        </service>

        <service id="umpirsky_i18n_routing.routing.factory.i18n_route_factory" class="Umpirsky\I18nRoutingBundle\Routing\Factory\I18nRouteFactory" public="false">
            <argument type="service" id="umpirsky_i18n_routing.routing.generator.locale_requirement_generator" />
            <argument>%umpirsky_i18n_routing.default_locale%</argument>
        </service>

        <service id="umpirsky_i18n_routing.routing.generator.locale_requirement_generator" class="Umpirsky\I18nRoutingBundle\Routing\Generator\LocaleRequirementGenerator" public="false">
            <argument>%umpirsky_i18n_routing.locales%</argument>
        </service>
    </services>
</container>
